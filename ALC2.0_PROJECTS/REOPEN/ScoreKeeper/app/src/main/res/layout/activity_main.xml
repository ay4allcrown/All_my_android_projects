<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#f40404"/>

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="64sp"
                android:gravity="center"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/team_a_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y 0\t:\tR 0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/team_a_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="teamAGoalScored"
                android:text="goal"
                android:textAllCaps="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="26dp"
                android:layout_marginBottom="8dp"
                android:background="#5ffe03"
                android:fontFamily="sans-serif-medium"/>

            <Button
                android:id="@+id/team_a_yellow_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yellow card"
                android:textAllCaps="true"
                android:onClick="teamAYellowCards"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="26dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"/>

            <Button
                android:id="@+id/team_a_red_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="red card"
                android:textAllCaps="true"
                android:onClick="teamARedCards"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="26dp"
                android:layout_marginBottom="8dp"
                android:background="#fe0404"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#0414f4"/>

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="64sp"
                android:gravity="center"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/team_b_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y 0\t:\tR 0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/team_b_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="teamBGoalScored"
                android:text="goal"
                android:textAllCaps="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="26dp"
                android:layout_marginBottom="8dp"
                android:background="#5ffe03"
                android:fontFamily="sans-serif-medium"/>

            <Button
                android:id="@+id/team_b_yellow_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yellow card"
                android:textAllCaps="true"
                android:onClick="teamBYellowCards"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="26dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"/>

            <Button
                android:id="@+id/team_b_red_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="red card"
                android:textAllCaps="true"
                android:onClick="teamBRedCards"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="26dp"
                android:layout_marginBottom="8dp"
                android:background="#fe0404"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="reset"
        android:textAllCaps="true"
        android:onClick="reset"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:background="#ffffff"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"/>
</RelativeLayout>
